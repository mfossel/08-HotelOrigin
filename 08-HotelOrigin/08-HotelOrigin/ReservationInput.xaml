        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservations" Height="496.746" Width="364.045" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="251"><Run Text="Please enter the reservation information:"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" Text="Reservation ID: " VerticalAlignment="Top" Height="26" Width="109"/>
        <TextBox x:Name="IdBox" HorizontalAlignment="Left" Height="23" Margin="119,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="47"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,109,0,0" TextWrapping="Wrap" Text="Check In Date" VerticalAlignment="Top" Height="29" Width="156" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="179,109,0,0" TextWrapping="Wrap" Text="Check Out Date" VerticalAlignment="Top" Height="29" Width="179" TextAlignment="Center"/>
        <ComboBox x:Name="RoomCombo" HorizontalAlignment="Left" Margin="21,233,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CustomerCombo" HorizontalAlignment="Left" Margin="216,233,0,0" VerticalAlignment="Top" Width="120"/>
