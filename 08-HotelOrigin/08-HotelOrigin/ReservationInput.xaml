        <Label Content="Customer " HorizontalAlignment="Left" Margin="233,202,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddResButton" Content="Add Reservation" HorizontalAlignment="Left" Margin="20,390,0,0" VerticalAlignment="Top" Width="121" Height="47" Click="AddResButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="214,390,0,0" VerticalAlignment="Top" Width="121" Height="47" Click="Button_Click"/>
        <DatePicker x:Name="CheckInCal" HorizontalAlignment="Left" Margin="39,143,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="CheckOutCal" HorizontalAlignment="Left" Margin="216,143,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
